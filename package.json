{
  "name": "pantheon-multi-ai",
  "version": "0.1.0",
  "description": "Pantheon Multi-AI Ecosystem - Orchestrating Claude and Gemini models for enhanced development",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "validate": "npm run lint && npm run test",
    "agent:spawn": "node src/cli/agent-spawn.js",
    "workflow:run": "node src/cli/workflow-run.js",
    "router:start": "node src/router/index.js",
    "setup": "node scripts/setup.js",
    "clean": "rm -rf .claude/cache .claude/logs/*.log",
    "build": "echo 'No build step required for Node.js'"
  },
  "keywords": [
    "ai",
    "claude",
    "gemini",
    "orchestration",
    "multi-agent",
    "validation",
    "workflow"
  ],
  "author": "Pantheon Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "eventemitter3": "^5.0.1",
    "express": "^4.18.2",
    "inquirer": "^9.2.12",
    "joi": "^17.11.0",
    "node-cache": "^5.1.2",
    "ora": "^7.0.1",
    "p-queue": "^7.4.1",
    "rate-limiter-flexible": "^3.0.6",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^20.10.5",
    "chalk": "^5.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/__tests__/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ],
    "verbose": true
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error",
            "info"
          ]
        }
      ],
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}
