{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pantheon Agent Configuration",
  "description": "Schema for defining Pantheon Multi-AI ecosystem agents",
  "type": "object",
  "required": ["name", "model", "tools", "collaboration_mode"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Unique agent identifier using kebab-case"
    },
    "description": {
      "type": "string",
      "description": "Brief description of agent purpose and capabilities"
    },
    "model": {
      "enum": [
        "auto",
        "claude-sonnet",
        "claude-haiku",
        "claude-opus",
        "gemini-2.5-pro",
        "gemini-2.5-flash",
        "gemini-pro",
        "gemini-flash"
      ],
      "description": "AI model to use for this agent"
    },
    "tools": {
      "type": "array",
      "items": {
        "enum": ["Edit", "Read", "Bash", "Grep", "Glob", "WebFetch", "Write", "MultiEdit"]
      },
      "description": "Available tools for this agent"
    },
    "collaboration_mode": {
      "enum": ["creator", "advisor", "designer", "manager", "specialist", "validator"],
      "description": "Agent's role in the collaboration ecosystem"
    },
    "code_writing": {
      "enum": ["ALLOWED", "FORBIDDEN"],
      "default": "ALLOWED",
      "description": "Whether agent can write or modify code"
    },
    "file_modification": {
      "enum": ["ALLOWED", "FORBIDDEN"],
      "default": "ALLOWED",
      "description": "Whether agent can modify files"
    },
    "command_execution": {
      "enum": ["ALLOWED", "FORBIDDEN"],
      "default": "ALLOWED",
      "description": "Whether agent can execute commands"
    },
    "validation_required": {
      "type": "boolean",
      "default": false,
      "description": "Whether agent work requires validation"
    },
    "auto_validation": {
      "type": "boolean",
      "default": false,
      "description": "Whether to automatically trigger validation"
    },
    "specialization": {
      "type": "string",
      "description": "Optional specialization area"
    },
    "user_communication": {
      "enum": ["ENABLED", "DISABLED"],
      "default": "ENABLED",
      "description": "Whether agent can communicate with users"
    },
    "priority": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "default": 5,
      "description": "Agent priority for task assignment"
    },
    "cost_tier": {
      "enum": ["premium", "standard", "free"],
      "description": "Cost tier for model usage"
    },
    "max_tokens": {
      "type": "integer",
      "minimum": 100,
      "maximum": 100000,
      "default": 4096,
      "description": "Maximum tokens per request"
    },
    "timeout_ms": {
      "type": "integer",
      "minimum": 1000,
      "maximum": 600000,
      "default": 30000,
      "description": "Request timeout in milliseconds"
    },
    "retry_policy": {
      "type": "object",
      "properties": {
        "max_retries": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "default": 3
        },
        "backoff_multiplier": {
          "type": "number",
          "minimum": 1,
          "maximum": 5,
          "default": 2
        },
        "initial_delay_ms": {
          "type": "integer",
          "minimum": 100,
          "maximum": 10000,
          "default": 1000
        }
      }
    },
    "validation_config": {
      "type": "object",
      "properties": {
        "validators": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of validator agents"
        },
        "validation_stages": {
          "type": "array",
          "items": {
            "enum": ["pre-execution", "mid-execution", "post-execution", "pre-deployment"]
          }
        },
        "severity_threshold": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "default": 3,
          "description": "Minimum severity to trigger refinement"
        }
      }
    }
  },
  "additionalProperties": false
}