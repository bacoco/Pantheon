# Pantheon Multi-AI Ecosystem Configuration
# ============================================

# API Keys (Required)
# -------------------
# Get your Claude API key from: https://console.anthropic.com
CLAUDE_API_KEY=

# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Environment Configuration
# ------------------------
PANTHEON_ENV=development
PANTHEON_LOG_LEVEL=debug
PANTHEON_LOG_FILE=.claude/logs/pantheon.log
PANTHEON_CACHE_TTL=3600
PANTHEON_MAX_RETRIES=3
PANTHEON_RETRY_DELAY_MS=1000

# Cost Control Settings
# --------------------
# Daily limits for API usage
DAILY_CLAUDE_LIMIT=1000
DAILY_GEMINI_LIMIT=1500
COST_ALERT_THRESHOLD=50
COST_EMERGENCY_THRESHOLD=100
PREFER_FREE_TIER=true

# Performance Settings
# -------------------
MAX_PARALLEL_AGENTS=5
MAX_PARALLEL_WORKFLOWS=3
WORKFLOW_TIMEOUT_MS=600000
VALIDATION_TIMEOUT_MS=30000
AGENT_TIMEOUT_MS=60000
MAX_CONTEXT_SIZE=100000

# Model Routing Strategy
# ---------------------
# Options: cost-optimized, quality-focused, speed-focused, balanced
ROUTING_STRATEGY=balanced
VALIDATION_MODE=strict
COLLABORATION_MODE=active

# Security Settings
# ----------------
ENFORCE_GEMINI_READONLY=true
ALLOW_EMERGENCY_OVERRIDE=true
REQUIRE_VALIDATION_FOR_PROD=true
ENABLE_AUDIT_LOGGING=true

# Monitoring & Analytics
# ---------------------
ENABLE_METRICS=true
METRICS_INTERVAL_MS=60000
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_COST_TRACKING=true
ENABLE_ERROR_TRACKING=true

# Advanced Features
# ----------------
ENABLE_SELF_HEALING=false
ENABLE_ADAPTIVE_LEARNING=false
ENABLE_PREDICTIVE_ROUTING=false
ENABLE_AUTO_OPTIMIZATION=false

# Database Configuration (Optional)
# --------------------------------
# For persistent storage of metrics and state
DATABASE_TYPE=sqlite
DATABASE_PATH=.claude/state/pantheon.db

# Webhook Configuration (Optional)
# -------------------------------
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# MCP Server Configuration (Optional)
# ----------------------------------
MCP_ENABLED=false
MCP_PORT=3000
MCP_HOST=localhost

# Cache Configuration
# ------------------
CACHE_ENABLED=true
CACHE_TYPE=file
CACHE_PATH=.claude/cache
CACHE_MAX_SIZE_MB=500
CACHE_EVICTION_POLICY=lru