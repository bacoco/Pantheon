# Pantheon Multi-AI Ecosystem Configuration

# API Keys (Required)
CLAUDE_API_KEY=your_claude_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Optional API Keys
ANTHROPIC_API_KEY=${CLAUDE_API_KEY}
GOOGLE_API_KEY=${GEMINI_API_KEY}

# Environment
NODE_ENV=development
PANTHEON_ENV=development
PANTHEON_LOG_LEVEL=info

# Server Configuration
PORT=3000
DASHBOARD_PORT=3000
MCP_PORT=3001
ENABLE_DASHBOARD=true
ENABLE_MCP=true

# Routing Strategy
# Options: cost_optimized, quality_focused, speed_focused, balanced
ROUTING_STRATEGY=balanced

# Validation Mode
# Options: strict, optional, none
VALIDATION_MODE=strict

# Cost Controls
DAILY_CLAUDE_LIMIT=1000
DAILY_GEMINI_LIMIT=1500
COST_ALERT_THRESHOLD=50
COST_EMERGENCY_THRESHOLD=100
PREFER_FREE_TIER=true

# Security
ENABLE_AUDIT=true
STRICT_ATTRIBUTION=true

# Database
DB_PATH=.claude/state/pantheon.db

# Monitoring
METRICS_INTERVAL=5000
RETENTION_DAYS=30

# Features
AUTO_VALIDATION=true
AUTO_REFINE=false
ENABLE_SELF_HEALING=true